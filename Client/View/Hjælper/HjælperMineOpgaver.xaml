            <StackPanel Orientation="Vertical" RenderTransformOrigin="0,0" Margin="200,200,800,0" Height="633" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <ListView x:Name="Lv" ItemsSource="{Binding OpgaveList}" SelectedItem="{Binding SelectedOpgaver, Mode=TwoWay}" Background="Brown" FontFamily="Calibri Light" Height="785" RenderTransformOrigin="0,0" Margin="35,0,0,0" HorizontalAlignment="Left" Width="1245" SelectionChanged="Lv_OnSelectionChanged">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Height="35" Width="632" Margin="0,0,0,0" RenderTransformOrigin="0.588,0.531">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Height="35" Margin="0,0,-13,0" VerticalAlignment="Stretch">
                                <TextBlock Margin="0,0,2,0" Text="Id" Foreground="White" Height="30" Width="25" FontFamily="Calibri Light" FontSize="18"/>
                                <TextBox Margin="10,0,2,0" IsReadOnly="True" Background="White" Text="{Binding ID, Mode= TwoWay}" FontFamily="Calibri Light" Height="35" Foreground="Black"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Height="35" Margin="30.4,0,0.2,0">
                                    <TextBlock Margin="2,0,0,0" Text=" KundeID:" Height="35" Width="55" Foreground="White" FontFamily="Calibri Light" FontSize="18" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                                    <TextBox  Margin="10,0,2,0" Background="White" Text="{Binding KundeID, Mode=TwoWay}" FontFamily="Calibri Light" Height="35" Width="250" Foreground="Black" />
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Height="35" Margin="14,0,-105,0" VerticalAlignment="Center" HorizontalAlignment="Stretch">
                                    <TextBlock Margin="15,0,-180,0" Text="Beskrivelse:" FontFamily="Calibri Light" Height="35" FontSize="18" Foreground="white" VerticalAlignment="Stretch" />
                                    <TextBox Margin="96,0,-158,0" Text="{Binding Beskrivelse, Mode=TwoWay}" Height="35" FontFamily="Calibri Light" Foreground="Black" Background="White" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

            </StackPanel>



